<div class="jumbotron jumbotron-fluid transparent-black">
	<div class="container">
		<h1 class="display-4 text-center userName text-light font-weight-bold">{{User.dataValues.username}}</h1>
	</div>
</div>
<div class="container">
	<div class="row">
		<div class="col-3">
			<img src="{{User.dataValues.img}}" id="profile-pic" alt="profile">
		</div>
		<div class="col-9 p-2">
			<div class="row">
				<h2>{{User.dataValues.firstName}} {{User.dataValues.lastName}}</h2>
			</div>
			<div class="row">
				<p>{{User.dataValues.bio}}</p>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col">
			<a href="/profile-edit">
				<button class="btn btn-block btn-primary">
					Edit
				</button>
			</a>
		</div>
	</div>
	<div class="row">
		<div class="col m-2 text-center">
			<h2>
				Posts <span class="badge badge-light">{{User.dataValues.Posts.length}}</span>
			</h2>
		</div>
	</div>
</div>

<div class="container">
	{{#each User.dataValues.Posts}}
	<div class="row my-3 p-3 shadow">
		<div class="col">
			<div>
				<h3>{{dataValues.title}}</h2>
			</div>
			<hr>
			<div>
				<p>{{dataValues.body}}</p>
			</div>
			<hr>
			<button class="btn btn-primary">Edit</button>
			<button class="btn btn-danger">Edit</button>
		</div>
	</div>
	{{/each}}
</div>