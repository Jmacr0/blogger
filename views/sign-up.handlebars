<div class="container">
	<div class="row">
		<div class="col-sm-8 col-lg-6 mx-auto mt-3 px-5 py-3 shadow-lg">
			<form action="/api/user/sign-up" method="post">
				<h4>Create an account</h4>

				{{> errors}}

				<div class="dropdown-divider"></div>
				<div class="form-group">
					<label for="signUpEmail">Email</label>
					<input type="email" class="form-control" name="signUpEmail">
				</div>
				<div class="form-group">
					<label for="signUpUsername">Username</label>
					<input type="text" class="form-control" name="signUpUsername">
				</div>
				<div class="form-group">
					<label for="signUpPassword">Password</label>
					<input type="password" class="form-control" name="signUpPassword">
				</div>
				<div class="form-group">
					<label for="confirmPassword">Confirm Password</label>
					<input type="password" class="form-control" name="confirmPassword">
				</div>
				<div class="form-group">
					<div class="row">
						<div class="col">
							<label for="signUpFirstName">First Name</label>
							<input type="text" class="form-control" name="signUpFirstName">
						</div>
						<div class="col">
							<label for="signUpLastName">Last Name</label>
							<input type="text" class="form-control" name="signUpLastName">
						</div>
					</div>
				</div>
				<div class="form-group">
					<label for="signUpCountry">Country</label>
					<select id="countrySelect" name="signUpCountry" class="form-control">
					</select>
				</div>
				<div class="text-center">
					<a href="/static/user/login">Login</a> |
					<button type="submit" class="btn btn-primary">
						Sign up
					</button>
				</div>
				<hr>
			</form>
		</div>
	</div>
</div>
<script src="/assets/js/selectCountries.js"></script>