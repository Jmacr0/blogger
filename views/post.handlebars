<div class="container p-3">
	<div class="row h-100">
		<div class="col my-auto">
			<h2>Create a new post</h2>
		</div>
	</div>
</div>

<div class="container">
	<form action="/api/post/new" method="post" id="post">
		<div class="form-group">
			<label for="title">Title</label>
			<input type="text" class="form-control" id="title" name="title">
		</div>
		<div class="form-group">
			<label for="editordata">Content</label>
			<textarea class="form-control" id="summernote" name="editordata"></textarea>
		</div>
		<button type="submit" class="btn btn-primary mb-2 save">Save</button>
	</form>
</div>